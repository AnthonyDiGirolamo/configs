function unzip_list {
  unzip -l $@ | ruby -e 'STDIN.readlines.tap{|f| f.shift(3); f.pop(2) }.each{|l| puts l.sub(/^\s+\S+\s+\S+\s+\S+\s+/,"")}'
}

function unzip_list_trim {
  unzip -l $@ | ruby -e 'STDIN.readlines.tap{|f| f.shift(3); f.pop(2) }.each{|l| puts l.sub(/^\s+\S+\s+\S+\s+\S+\s+[^\/]+\//,"")}'
}

