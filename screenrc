shell /usr/bin/zsh
vbell off
defscrollback 16384
startup_message off
defutf8 on

# 256 Colors
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on
term screen-bce

